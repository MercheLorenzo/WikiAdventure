{
    "version": "0.2.0",
    "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "nodemon",
        "args": ["--watch App.js"],
        "cwd": "${workspaceFolder}/bin",
        //"runtimeExecutable": "${workspaceFolder}/bin/node_modules/nodemon/bin/nodemon.js",
        "program": "${workspaceFolder}/bin/App.js",
        "restart": true,
        "console": "integratedTerminal",
        "preLaunchTask": "Complete build",
        "internalConsoleOptions": "neverOpen"
    }]
}