{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Quasar SPA",
            "type": "shell",
            "command": "cd front; quasar build"
        },
        {
            "label": "Build Quasar PWA",
            "type": "shell",
            "command": "cd front; quasar build -m pwa"
        },
        {
            "label": "Debug Quasar SPA",
            "type": "shell",
            "command": "cd front; quasar build -d"
        },
        {
            "label": "Debug Quasar PWA",
            "type": "shell",
            "command": "cd front; quasar build -d -m pwa"
        },
        {
            "label": "Quasar dev",
            "type": "shell",
            "command": "cd front; quasar dev",
        },
        {
            "label": "Quasar dev PWA",
            "type": "shell",
            "command": "cd front; quasar dev -m pwa",
        },
        {
            "type": "hxml",
            "file": "node.hxml",
            "problemMatcher": [
                "$haxe-absolute",
                "$haxe",
                "$haxe-error",
                "$haxe-trace"
            ],
            "group": "build",
            "label": "haxe: node.hxml"
        },
        {
            "label": "Complete SPA build",
            "dependsOn": [
                "haxe: node.hxml",
                "Build Quasar SPA"
            ]
        },
        {
            "label": "Complete PWA build",
            "dependsOn": [
                "haxe: node.hxml",
                "Build Quasar PWA"
            ]
        },
        {
            "label": "Complete SPA debug",
            "dependsOn": [
                "haxe: node.hxml",
                "Debug Quasar SPA"
            ]
        },
        {
            "label": "Complete PWA debug",
            "dependsOn": [
                "haxe: node.hxml",
                "Debug Quasar PWA"
            ]
        }
    ]
}