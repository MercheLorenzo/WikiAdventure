{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Quasar front-end",
            "type": "shell",
            "command": "cd front-quasar/wiki-adventure-quasar; quasar build"
        },
        {
            "label": "Build debug Quasar front-end",
            "type": "shell",
            "command": "cd front-quasar/wiki-adventure-quasar; quasar build -d"
        },
        {
            "label": "Quasar dev",
            "type": "shell",
            "command": "cd front-quasar/wiki-adventure-quasar; quasar dev",
            "problemMatcher": []
        },
        {
            "type": "hxml",
            "file": "node.hxml",
            "problemMatcher": [
                "$haxe-absolute",
                "$haxe",
                "$haxe-error",
                "$haxe-trace"
            ],
            "group": "build",
            "label": "haxe: node.hxml"
        },
        {
            "label": "Complete build",
            "dependsOn": [
                "haxe: node.hxml",
                "Build debug Quasar front-end"
            ]
        }
    ]
}